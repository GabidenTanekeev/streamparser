#!/bin/bash

set -e -u

got=$(mktemp -t streamparser.XXXXXXXXXXX)
exp="$(dirname "$0")/test-expected"
trap 'rm -f "${got}"' EXIT

PYTHON=${PYTHON:-python3}

echo '[\^keep<escapes>\$] \^ \$ \/ \[ \] ^x\/y\^\$\<z\>Ã¥/A\$\^B<tag><tag2>/A\/S<tag>$' | "${PYTHON}" -c 'from streamparser import parse_file, readingToString
import sys
for blank, lu in parse_file(sys.stdin, withText=True):
    print("BLANK:"+blank)
    print("LU:"+str(lu))
    print(lu.readings)
    print(lu.wordform)
    print(lu.knownness)
' >"${got}"

diff -U0 "${got}" "${exp}"
